<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kkyoungs.kream.CommTitleBar
        android:id="@+id/comm_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        Type="3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    <!--tab layout-->
    <LinearLayout
        android:id="@+id/ll_tab_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.kkyoungs.kream.StickyScrollView
            android:id="@+id/main_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_tab_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/tab_menu_item_layout" />
        <LinearLayout
            android:id="@+id/ll_main_tab_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_marginBottom="24dp">
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/main_tab"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:tabPaddingBottom="0dp"
            app:tabPaddingTop="0dp"
            app:tabTextAppearance="@color/black"
            app:tabIndicator="@drawable/store_tab_indicator_65dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@color/color_222222"
            app:tabIndicatorHeight="2dp"
            app:tabIndicatorGravity="bottom"
            app:tabGravity="start"
            android:background="#ffffff"
            app:tabTextColor="#222222"
            app:tabRippleColor="@android:color/transparent"/>

    </LinearLayout>

    </LinearLayout>
        </com.kkyoungs.kream.StickyScrollView>
</LinearLayout>
    </LinearLayout>
</LinearLayout>
</layout>